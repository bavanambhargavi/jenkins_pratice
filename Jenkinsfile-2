pipeline {  
    agent any  
    stages {  
            stage ('Build') { 
                steps{ 
                echo "Build this job" 
            }
            }  
            stage ('Test') {
                steps{
                echo "testing the job"
                }  
                 
            }  
            stage ('QA') { 
                steps{
                sh "pip install playwright"
                sh "pip install pytest"
                sh "pip install pytest-playwright"
                sh "pip install allure-pytest"
                } 
            }  
            stage ("failure")
                steps{
                echo " "
                catch(e){
                    currentBuild.result = 'FAILURE'
                    
                    mail to: 'bavanam.bhargavi@gmail.com', 'bavanambhargavi14@gmail.com', 
                     
                }
                } 
            }  
            stage ('Monitor') { 
                steps{
                echo "Monitoring the job"
                sh "pip install pytest-html"
                sh "pip install junit--xml"
                sh "pip install pytest--html"

                } 
            }
    }
}  